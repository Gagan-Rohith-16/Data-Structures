    printf("Enter the numbers \n");
    for(i=0;i<n;++i)
    {
        scanf("%d",&number[i]);
    }
    for(i=0;i<n;++i)
    {
        for(j=i+1;j<n;++j)
        {
            if(numbers[i]<numbers[j])
            {
                a=numbers[i];
                numbers[i]=numbers[j];
                numbers[j]=a;
            }
        }
    }
    printf("The 2nd largest number is= %d \n",numbers[i]);
    printf("The 2nd smallest number is= %d \n",numbers[n-2]);
